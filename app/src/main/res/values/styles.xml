<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TransitionsTheme" parent="AppTheme">
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="CommonDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/common_trans</item>
    </style>

    <style name="CommonDialogBottomStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowAnimationStyle">@style/CommonDialogBottomAnim</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/common_trans</item>
    </style>

    <style name="CommonDialogBottomAnim" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/anim_dialog_up</item>
        <item name="android:windowExitAnimation">@anim/anim_dialog_down</item>
    </style>

</resources>